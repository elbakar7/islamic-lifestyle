{
    "name": "islamic-lifestyle/platform",
    "description": "Islamic Lifestyle Platform for Tanzanian Muslim Community",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "vlucas/phpdotenv": "^5.5",
        "phpmailer/phpmailer": "^6.8",
        "guzzlehttp/guzzle": "^7.8",
        "nesbot/carbon": "^2.72",
        "monolog/monolog": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "includes/helpers.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}